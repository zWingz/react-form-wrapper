{
  "name": "react-form-wrapper",
  "version": "1.0.0",
  "description": "A react form component HOC",
  "main": "index.js",
  "author": "zhengzwing@gmail.com",
  "license": "MIT",
  "scripts": {
    "docz": "docz dev",
    "docz:build": "docz build",
    "build": "rollup -c",
    "tslint": "tslint --fix --format codeFrame --project .",
    "dev": "webpack-serve --host 0.0.0.0 --port 2222",
    "pub": "yarn tslint && yarn build && yarn publish --registry http://registry.npmjs.org --access=public",
    "test": "jest"
  },
  "dependencies": {
    "@types/enzyme": "^3.1.15"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@types/jest": "^23.3.10",
    "@types/react": "^16.7.11",
    "babel-loader": "^8.0.4",
    "cz-conventional-changelog": "^2.1.0",
    "docz": "0.12.13",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.5",
    "html-webpack-plugin": "^3.2.0",
    "immer": "^1.8.0",
    "jest": "^23.6.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "shallowequal": "^1.1.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.1",
    "webpack": "^4.26.1",
    "webpack-serve": "^2.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.ts",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/__test__/**"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__test__/*.test.(ts|tsx)"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
