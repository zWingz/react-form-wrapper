{
  "name": "@zzwing/react-form-wrapper",
  "version": "1.0.1",
  "description": "A react form component HOC",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "./index.d.ts",
  "author": "zhengzwing@gmail.com",
  "license": "MIT",
  "files": [
    "dist",
    "src",
    "index.d.ts"
  ],
  "homepage": "https://zwing.site/react-form-wrapper/#/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zWingz/react-form-wrapper.git"
  },
  "bugs": {
    "url": "https://github.com/zWingz/react-form-wrapper/issues"
  },
  "scripts": {
    "docz": "docz dev",
    "docz:build": "docz build",
    "build": "rollup -c",
    "tslint": "tslint --fix --format codeFrame --project .",
    "dev": "poi --serve",
    "pub": "yarn tslint && yarn test && yarn build && yarn publish --access=public",
    "test": "jest"
  },
  "peerDependencies": {
    "react": ">=16.0.0"
  },
  "devDependencies": {
    "@poi/plugin-typescript": "^12.0.1",
    "@types/enzyme": "^3.1.15",
    "@types/jest": "^24.0.11",
    "@types/react": "^16.7.11",
    "cz-conventional-changelog": "^2.1.0",
    "docz": "^0.13.7",
    "docz-theme-default": "^0.13.7",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "enzyme-to-json": "^3.3.5",
    "jest": "^24.1.0",
    "poi": "^12.5.5",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "rollup": "^1.4.1",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-typescript": "^1.0.0",
    "ts-jest": "^24.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/test/*.test.(ts|tsx)"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
