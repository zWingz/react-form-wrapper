{
  "name": "react-form-wrapper",
  "version": "1.0.0",
  "description": "A react form component HOC",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "./index.d.ts",
  "author": "zhengzwing@gmail.com",
  "license": "MIT",
  "files": [
    "dist",
    "src",
    "index.d.ts"
  ],
  "homepage": "https://zwing.site/react-form-wrapper/#/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zWingz/react-form-wrapper.git"
  },
  "bugs": {
    "url": "https://github.com/zWingz/react-form-wrapper/issues"
  },
  "scripts": {
    "docz": "docz dev",
    "docz:build": "docz build",
    "build": "rollup -c",
    "tslint": "tslint --fix --format codeFrame --project .",
    "dev": "webpack-serve --host 0.0.0.0 --port 2222",
    "pub": "yarn tslint && yarn build && yarn publish --registry http://registry.npmjs.org --access=public",
    "test": "npm run tslint && jest"
  },
  "peerDependencies": {
    "react": ">=16.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@types/enzyme": "^3.1.15",
    "@types/jest": "^23.3.10",
    "@types/react": "^16.7.11",
    "babel-loader": "^8.0.4",
    "cz-conventional-changelog": "^2.1.0",
    "docz": "0.12.15",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.5",
    "html-webpack-plugin": "^3.2.0",
    "immer": "^1.8.0",
    "jest": "^23.6.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "rollup": "^0.67.4",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-typescript": "^1.0.0",
    "shallowequal": "^1.1.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.1",
    "webpack": "^4.26.1",
    "webpack-serve": "^2.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.ts",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/test/*.test.(ts|tsx)"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
